<h2>忘记密码?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal well' }) do |f| %>
  <%= f.error_notification %>

    <%= f.input :email, :label => '', :placeholder => '邮箱', :required => true %>
    <%= f.button :submit, "发送重置密码链接到邮箱" %>
<% end %>

